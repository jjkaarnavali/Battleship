@page

@using Domain
@using GameBrain
@model WebApp.Pages.GamePlay.P1PlaceShips

@functions
{
    string GetCellContent(CellState cell, int? x, int? y, int? posX, int? posY, int? shipLength, string? horiz)
    {
        var res = "";
        switch (cell)
        {
            case CellState.Empty :
                res = "&nbsp;";
                break;
            case CellState.Hit :
                res = "🔥";
                break;
            case CellState.Miss :
                res = "🌊";
                break;
            case CellState.Ship :
                res = "⚓";
                break;
        }
        if (res == "&nbsp;" && x == posX && y == posY)
        {
            res = "🏴‍☠";
        }
        if (horiz == "True" && res == "&nbsp;" && posX < x && x < posX + shipLength && y == posY)
        {
            res = "🏴‍☠";
        }
        if (horiz == "False" && res == "&nbsp;" && x == posX && posY < y && y < posY + shipLength)
        {
            res = "🏴‍☠";
        }
        
        return res;
    }
    
}

<div class="row">
    
    <div class="col-4">
                <table>
                    <tr>
                        <td><a asp-route-id="@Model.Game.GameId" asp-route-posx="@Model.PosX" asp-route-posy="@Model.PosY" asp-route-dir="up-left" asp-route-canTouch="@Model.CanTouch">↖️</a></td>
                        <td><a asp-route-id="@Model.Game.GameId" asp-route-posx="@Model.PosX" asp-route-posy="@Model.PosY" asp-route-dir="up" asp-route-canTouch="@Model.CanTouch">⬆️</a></td>
                        <td><a asp-route-id="@Model.Game.GameId" asp-route-posx="@Model.PosX" asp-route-posy="@Model.PosY" asp-route-dir="up-right" asp-route-canTouch="@Model.CanTouch">↗️</a>️</td>
                    </tr>
                    <tr>
                        <td><a asp-route-id="@Model.Game.GameId" asp-route-posx="@Model.PosX" asp-route-posy="@Model.PosY" asp-route-dir="left" asp-route-canTouch="@Model.CanTouch">⬅️</a>️</td>
                        <td><a asp-route-id="@Model.Game.GameId" asp-route-posx="@Model.PosX" asp-route-posy="@Model.PosY" asp-route-dir="rotate" asp-route-canTouch="@Model.CanTouch">🔄</a>️</td>
                        <td><a asp-route-id="@Model.Game.GameId" asp-route-posx="@Model.PosX" asp-route-posy="@Model.PosY" asp-route-dir="right" asp-route-canTouch="@Model.CanTouch">➡️</a>️</td>
        
                    </tr>
                    <tr>
                        <td><a asp-route-id="@Model.Game.GameId" asp-route-posx="@Model.PosX" asp-route-posy="@Model.PosY" asp-route-dir="down-left" asp-route-canTouch="@Model.CanTouch">↙️</a>️</td>
                        <td><a asp-route-id="@Model.Game.GameId" asp-route-posx="@Model.PosX" asp-route-posy="@Model.PosY" asp-route-dir="down" asp-route-canTouch="@Model.CanTouch">⬇️</a>️</td>
                        <td><a asp-route-id="@Model.Game.GameId" asp-route-posx="@Model.PosX" asp-route-posy="@Model.PosY" asp-route-dir="down-right" asp-route-canTouch="@Model.CanTouch">↘️</a>️</td>
                    </tr>
                    <tr>
                        <td onclick="window.location.href = '?x=@Model.PosX&y=@Model.PosY&id=@Model.Game.GameId&canTouch=@Model.CanTouch'" style="cursor: pointer">🆗️</td>
                    </tr>
                </table>
    </div>

    <div class="col-4 text-center">


        @Model.Game.PlayerA.Name's board


        <table class="table table-bordered" name="P1board">
            @for (int y = 0; y < Battleships.s; y++)
            {
                <tr>
                    @for (int x = 0; x < Battleships.s; x++)
                    {

                        
                        <td onclick="window.location.href = '?x=@x&y=@y&id=@Model.Game.GameId'" style="cursor: pointer">@Html.Raw(GetCellContent(Model.Battleships.GetCell(x, y, true), x, y, Model.PosX, Model.PosY, 5, Model.Horizontal.ToString()))</td>
                    }
                </tr>
            }
        </table>
    </div>
    
    


</div>




