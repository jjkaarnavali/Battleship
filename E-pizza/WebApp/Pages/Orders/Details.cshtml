@page
@using Domain
@model WebApp.Pages_Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Order details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.BuyerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.BuyerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Price)
        </dd>
        <dd class="col-sm-10">
            @if (Model.OrderPizzaList != null)
            {
                @foreach (Pizza pizza in Model.OrderPizzaList)
                {
                    @pizza.Name
                    if (pizza.AddComponents != null)
                    {
                        <a> with:</a>
                        foreach (var comp in pizza.AddComponents)
                        {
                            <a> </a>
                            @comp.CompName
                           
                        }
                    }
                   
                    <br>
                }
            }
        </dd>
        
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.OrderId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
